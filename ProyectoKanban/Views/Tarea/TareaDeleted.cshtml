@model TareaModel
@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="p-4 shadow-sm bg-white rounded">
    <h3>@ViewData["Title"]</h3>
    <form asp-action="TareaDeleted" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="card">
            <div class="card-body">
                <p><strong>Nombre:</strong> @Model.Nombre</p>
                <p><strong>Descripción:</strong> @Model.Descripcion</p>
                <p><strong>Fecha Inicio:</strong> @Model.FechaInicio.ToShortDateString()</p>
                <p><strong>Fecha Entrega:</strong> @Model.FechaEntrega.ToShortDateString()</p>
                <p><strong>Estado:</strong> @Model.Estado</p>
                <p><strong>Días antes de alerta:</strong> @Model.DiasAntesAlerta</p>

            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="TareaList" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

    <style>
        body { background-image: url('/img/Fondo.jpeg'); font-family: Arial, sans-serif; color: rgba(1, 1, 1, 0.889) }        
    </style>
</div>
