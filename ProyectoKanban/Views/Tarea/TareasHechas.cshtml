@model List<ProyectoKanban.Models.TareaModel>
@{
    ViewData["Title"] = "✅ Tareas Completadas";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white d-flex justify-content-between">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>

        <div class="card-body bg-light">
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-4">
                    <label class="form-label">Desde:</label>
                    <input type="date" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Hasta:</label>
                    <input type="date" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </form>

            @if (Model.Any())
            {
                <table class="table table-bordered text-center bg-white">
                    <thead class="table-success">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Inicio</th>
                            <th>Entrega</th>
                            <th>Asignado a</th>
                            <th>Días Alerta</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tarea in Model)
                        {
                            <tr>
                                <td>@tarea.Nombre</td>
                                <td>@tarea.Descripcion</td>
                                <td>@tarea.FechaInicio.ToShortDateString()</td>
                                <td>@tarea.FechaEntrega.ToShortDateString()</td>
                                <td>@(tarea.UsuarioNombre ?? "Sin asignar")</td>
                                <td>@tarea.DiasAntesAlerta</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">No hay tareas completadas en ese rango.</div>
            }
        </div>
    </div>

    <style>
        body { background-image: url('/img/Fondo.jpeg'); font-family: Arial, sans-serif; color: rgba(1, 1, 1, 0.889) }        
    </style>
</div>
