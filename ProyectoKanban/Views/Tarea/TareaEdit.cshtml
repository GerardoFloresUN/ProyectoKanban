@using ProyectoKanban.Models
@model TareaModel

@{
    ViewData["Title"] = "Editar Tarea";
}

<form asp-action="TareaEdit" method="post" class="p-4 shadow-sm bg-white rounded">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    @* Campo oculto para que el controlador reciba el ID *@
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Fecha de Inicio</label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Fecha de Entrega</label>
        <input asp-for="FechaEntrega" type="date" class="form-control" />
    </div>

    <div class="form-group">
    <label asp-for="Estado" class="control-label"></label>
    <select asp-for="Estado" class="form-control">
        <option value="Por hacer">Por hacer</option>
        <option value="En progreso">En progreso</option>
        <option value="Hecho">Hecho</option>
    </select>
    <span asp-validation-for="Estado" class="text-danger"></span>
</div>

    <div class="mb-3">
    <label>Asignar a Usuario</label>
    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios">
        <option value="">-- Selecciona un usuario --</option>
    </select>
    </div>

    <div class="mb-3">
    <label>Días antes para alerta</label>
    <input asp-for="DiasAntesAlerta" type="number" min="0" class="form-control" />
    </div>



    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="TareaList" class="btn btn-secondary">Regresar</a>
</form>
